<resources>

    <!-- Base application theme. -->
    <style name="Botty" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="Botty.RibbonTouch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/ribbon_touch</item>
    </style>

    <style name="TitleTex">
        <item name="android:textAppearance">@android:style/TextAppearance.Large.Inverse</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- style for FadingActionBar -->

    <style name="Widget" />

    <style name="Widget.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse" />

    <style name="Widget.Light" />

    <style name="Widget.Light.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid" />

    <style name="Widget.ActionBar.Transparent">
        <item name="android:background">@color/trasp</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/TitleTex</item>
    </style>

    <style name="Widget.Light.ActionBar.Transparent">
        <item name="android:background">@color/trasp</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/TitleTex</item>
    </style>


    <style name="ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>
</resources>
